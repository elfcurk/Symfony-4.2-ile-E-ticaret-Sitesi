<div class="col-sm-9 padding-right">
    <div class="features_items"><!--features_items-->
        <h2 class="title text-center">Yeni Ürünler</h2>
        {% for rs in content %}
        <div class="col-sm-4">
            <div class="product-image-wrapper">
                <div class="single-products">
                    <div class="productinfo text-center">
                        <a href="{{ path('product_detail', {'id':rs.id}) }}">
                            <img src="{{ asset('uploads') }}/images/{{ rs.image }}" class="girl img-responsive" alt="">
                        </a>
                        <h2>₺ {{ rs.sprice }}</h2>
                        <p>{{ rs.title }}</p>
                        <a href="{{ path('product_detail', {'id':rs.id}) }}" class="btn btn-default add-to-cart"><i class="fa fa-search"></i>Ürünü İncele</a>

                    </div>
                    <div class="product-overlay">
                        <div class="overlay-content">
                            <h2>₺ {{ rs.sprice }}</h2>
                            <p>{{ rs.title }}</p>
                            <a href="{{ path('product_detail', {'id':rs.id}) }}">
                                <img src="{{ asset('uploads') }}/images/{{ rs.image }}" class="girl img-responsive" alt="" height="320" width="320">
                            </a>
                            <a href="{{ path('product_detail', {'id':rs.id}) }}" class="btn btn-default add-to-cart"><i class="fa fa-search"></i>Ürünü Gör</a>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div><!--features_items-->


</div>
</div>
</div>
</section>
