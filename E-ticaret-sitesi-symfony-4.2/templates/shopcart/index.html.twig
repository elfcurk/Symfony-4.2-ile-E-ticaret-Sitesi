{% extends 'frontbase.html.twig' %}
{% block title %}Sepetim{% endblock %}
{% block sidebar %} {% include 'home/_usersidebar.html.twig' %} {% endblock %}
{% block content %}
    <div class="col-sm-9 padding-right">
    <div class="features_items"><!--features_items-->

        <div class="product-details"><!--product-details-->
            <div class="cols-sm-10">

                <b><h3>Sepetteki Ürünler</h3></b>
                {{ include('admin/messages.html.twig') }}
                <br>
                <table class="table">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Ürün İsmi</th>
                        <th>Satış Fiyatı</th>
                        <th>Adet</th>
                        <th>Toplam Fiyat</th>
                        <th>Hareketler</th>

                    </tr>
                    </thead>
                    <tbody>
                    {% for shopcart in shopcarts %}
                        <tr>
                            <td>{{ shopcart.id }}</td>
                            <td>{{ shopcart.title }}</td>
                            <td>{{ shopcart.sprice }}</td>
                            <td>{{ shopcart.quantity }}</td>
                            <td>{{ shopcart.quantity * shopcart.sprice }}</td>
                            <td><a href="{{ path('shopcart_del',{'id':shopcart.id}) }}" onclick="return confirm('Silmek istediğine emin misin?');" class="btn btn-1 btn-danger">Sil</a></td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">ürün bulunamadı</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <a href="{{ path('orders_new') }}"class="btn btn-block btn-success">Ürünleri Satın Al</a>
            </div>
        </div><!--/category-tab-->
    </div>
    </div>
    </div>
    </div>
    </section>
{% endblock %}
