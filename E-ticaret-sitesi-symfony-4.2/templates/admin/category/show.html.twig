{% extends 'adminbase.html.twig' %}
{% block title %} Kategori Detayı {% endblock %}
{% block content %}
    <!--inner block start here-->
    <div class="inner-block">
        <div class="blank">
            <h2>Kategori Detayı</h2>
            <h6>
                <small><a href="{{ path('admin_category_new') }}" class="btn btn-1 btn-danger">Kategori Ekleme</a></small>
            </h6>
            <div class="blankpage-main">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ category.id }}</td>
                        </tr>
                        <tr>
                            <th>Parentid</th>
                            <td>{{ category.parentid }}</td>
                        </tr>
                        <tr>
                            <th>Title</th>
                            <td>{{ category.title }}</td>
                        </tr>
                        <tr>
                            <th>Keywords</th>
                            <td>{{ category.keywords }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ category.description }}</td>
                        </tr>
                        <tr>
                            <th>Status</th>
                            <td>{{ category.status }}</td>
                        </tr>
                        </tbody>
                    </table>

                    <a href="{{ path('admin_category_index') }}">back to list</a>

                    <a href="{{ path('admin_category_edit', {'id': category.id,'pid':category.parentid}) }}">edit</a>

                    {{ include('admin/category/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
    <!--inner block end here-->
{% endblock %}
