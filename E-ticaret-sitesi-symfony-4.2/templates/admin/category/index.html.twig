{% extends 'adminbase.html.twig' %}
{% block title %} Kategori Listesi {% endblock %}
{% block content %}
    <!--inner block start here-->
    <div class="inner-block">
        <div class="blank">
            <h2>Kategori Listesi</h2>
            <h6>
                <small><a href="{{ path('admin_category_new') }}" class="btn btn-1 btn-info">Kategori Ekleme</a></small>
            </h6>
            <div class="blankpage-main">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Parentid</th>
                            <th>Title</th>
                            <th>Keywords</th>
                            <th>Description</th>
                            <th>Status</th>
                            <th>Göster</th>
                            <th>Düzenle</th>
                            <th>Sil</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for category in categories %}
                            <tr>
                                <td>{{ category.id }}</td>
                                <td>{{ category.parentid }}</td>
                                <td>{{ category.title }}</td>
                                <td>{{ category.keywords }}</td>
                                <td>{{ category.description }}</td>
                                <td>{{ category.status }}</td>
                                <td>
                                    <a href="{{ path('admin_category_show', {'id': category.id}) }}" class="btn btn-1 btn-success">Göster</a>
                                </td><td>
                                    <a href="{{ path('admin_category_edit', {'id': category.id, 'pid':category.parentid }) }}" class="btn btn-1 btn-warning">Düzenle</a>
                                </td><td>{{ include('admin/category/_delete_form.html.twig') }} </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!--inner block end here-->
{% endblock %}