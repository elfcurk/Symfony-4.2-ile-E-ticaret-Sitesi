{{ include('admin/messages.html.twig') }}
<form class="form-horizontal" method="post">
    <div class="col-md-12">
        <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
                <li class="active"><a href="#tab_1" data-toggle="tab">Genel Bilgiler</a></li>
                <li><a href="#tab_2" data-toggle="tab">Email Server</a></li>
                <li><a href="#tab_3" data-toggle="tab">Hakkımızda Sayfası</a></li>
                <li><a href="#tab_4" data-toggle="tab">İletişim Sayfası</a></li>
                <li><a href="#tab_5" data-toggle="tab">Referanslar Sayfası</a> </li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="tab_1">

                    <div class="form-group">
                        <label class="col-sm-3 control-label">Adı</label>

                        <div class="col-sm-8">
                            <input type="text" class="form-control" name="setting[title]" value="{{ setting.title }}" placeholder="Adı" required="">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Anahtar Kelimeler</label>

                        <div class="col-sm-8">
                            <input type="text" class="form-control" name="setting[keywords]" value="{{ setting.keywords }}" placeholder="Keywords" required="">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Kısa Açıklama</label>

                        <div class="col-sm-8">
                            <input type="text" class="form-control" name="setting[description]" value="{{ setting.description }}" placeholder="Description" required="">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Firma Adı</label>

                        <div class="col-sm-8">
                            <input type="text" class="form-control" name="setting[company]" value="{{ setting.company }}" placeholder="Title" required="">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Adresi</label>

                        <div class="col-sm-8">
                            <input type="text" class="form-control" name="setting[address]" value="{{ setting.address }}" placeholder="Title" required="">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Telefon</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" name="setting[phone]" value="{{ setting.phone }}" placeholder="Title" required="">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Fax</label>

                        <div class="col-sm-8">
                            <input type="text" class="form-control" name="setting[fax]" value="{{ setting.fax }}" placeholder="Title" required="">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Durum</label>
                        <div class="col-sm-5">
                            <select name="setting[status]" class="form-control">
                                <option>{{ setting.status }}</option>
                                <option>True</option>
                                <option>False</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="tab-pane" id="tab_2">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Email Server</label>

                        <div class="col-sm-8">
                            <input type="text" class="form-control" name="setting[smtpserver]" value="{{ setting.smtpserver }}" placeholder="Title" required="">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Email</label>

                        <div class="col-sm-8">
                            <input type="text" class="form-control" name="setting[smtpemail]" value="{{ setting.smtpemail }}" placeholder="Title" required="">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Email Şifre</label>

                        <div class="col-sm-8">
                            <input type="text" class="form-control" name="setting[smtppassword]" value="{{ setting.smtppassword }}" placeholder="Title" required="">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">SMTP Port</label>

                        <div class="col-sm-8">
                            <input type="text" class="form-control" name="setting[smtpport]" value="{{ setting.smtpport }}" placeholder="Title" required="">
                        </div>
                    </div>

                </div>



                <div class="tab-pane" id="tab_3">
                    <div class="form-group">
                        <div class="col-sm-8">
                            <textarea id="aboutus" name="setting[aboutus]" rows="10" cols="74">{{ setting.aboutus }}</textarea>
                        </div>
                    </div>

                </div>
                <div class="tab-pane" id="tab_4">
                    <div class="form-group">
                        <div class="col-sm-8">
                            <textarea id="contact" name="setting[contact]" rows="10" cols="74">{{ setting.contact }}</textarea>
                        </div>
                    </div>
                </div>
                <div class="tab-pane" id="tab_5">
                    <div class="form-group">
                        <div class="col-sm-8">
                            <textarea id="referances" name="setting[referances]" rows="10" cols="74">{{ setting.referances }}</textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="forgot-top-grids">
        <div class="clearfix"> </div>
    </div>
    <input type="submit" name="Sign In" value="Kaydet">
</form>
<script>
    ClassicEditor
        .create( document.querySelector( '#contact' ) )
        .catch( error => {
            console.error( error );
        } );
</script>
<script>
    ClassicEditor
        .create( document.querySelector( '#aboutus' ) )
        .catch( error => {
            console.error( error );
        } );
</script>
<script>
    ClassicEditor
        .create( document.querySelector( '#referances' ) )
        .catch( error => {
            console.error( error );
        } );
</script>